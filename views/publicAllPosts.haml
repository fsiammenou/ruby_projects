%html
   %head   
      %title  AllPosts
   %body
      %h1 All Posts
      %br
      -locals[:posts].each do |p|
         %li
            %a{:href => "/viewPost?postid=#{p.id}"}#{p.title}
            %label{:id => "1", :style => "font-size: 9pt"} #{dformat(p.date_created)}
            %label{:id => "1", :style => "font-size: 9pt"} ,by #{User[p.user_id].username}
           

